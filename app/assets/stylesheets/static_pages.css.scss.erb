@import 'flipclock';
@import url(http://fonts.googleapis.com/css?family=Parisienne);


// COLORS

$red:           #cd3737;
$red-dark:      darken($red, 10);
$red-light:     lighten($red, 10);

$purple:        #6c37cd;
$purple-dark:   darken($purple, 10);
$purple-light:  lighten($purple, 10);

$gold:          #cd9d37;
$gold-dark:     darken($gold, 10);
$gold-light:    lighten($gold, 10);

$green:         #37cd7a;
$green-dark:    darken($green, 10);
$green-light:   lighten($green, 10);

$gray:          #555;
$gray-dark:     darken($gray, 10);
$gray-light:    lighten($gray, 10);


// END COLORS


// Keyframes

@keyframes heart_beats {
    0% { height: 100px; width: 100px; background-color: $red; }
    25% { height: 110px; width: 110px; background-color: $red-dark; }
    100% { height: 100px; width: 100px; background-color: $red; }
}

// End Keyframes


// Full screen options
html, body {
    height: 100%;
    width: 100%;
    margin: 0;
    padding: 0;
    // overflow: hidden;
}

body {
    font-family: 'Parisienne', cursive, 'sans-serif';
    font-size: 20px;
    color: $red;
    background-image: url(<%= asset_path('map_background.jpg') %>);
    background-repeat: no-repeat;
    background-position: center 0%;
    background-size: cover;

    .home_container {
        box-shadow: 0 0 0 10px rgba(255, 255, 255, 0.7);
        padding: 20px;
        margin: 20px;
        text-align: center;
        height: 85%;

        .countdown_container {
            margin: 70px auto;
            width: 620px;
            max-width: 100%;
        }

        .buttons_container {

            .button_wrapper {
                height: 200px;
                width: 200px;
                display: inline-block;
                position: relative;

                button {
                    position: absolute;
                    left: 30px;
                }
            }
        }
    }
}

button {
    border: solid 1px;
    height: 100px;
    width: 100px;
    border-radius: 60px;
    cursor: pointer;
    font-size: 1.5em;
    color: white;
    margin: 10px 25px;

    &.active {
        animation-duration: 1s;
        animation-name: heart_beats;
        animation-iteration-count: infinite;
    }
    
    &.yes {
        background-color: $red;
    }

    &.no {
        background-color: $red-dark;

        &:hover {
            background-color: $gray;
        }
    }
}