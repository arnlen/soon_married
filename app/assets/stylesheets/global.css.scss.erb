// Full screen options
html, body {
    height: 100%;
    // max-height: 900px;
    width: 100%;
    margin: 0;
    padding: 0;
    // overflow: hidden;
}

body {
    font-family: 'Walker on the Moon', 'Parisienne', 'sans-serif';
    font-size: 30px;
    color: $red;
    background-image: url(<%= asset_path('map_background.jpg') %>);
    background-repeat: no-repeat;
    background-position: center 0%;
    background-size: cover;
    // height: 750px;
    height: 100%;
}

h1, h2, h3 {
    font-weight: normal;
    margin-top: 0;
}

p {
    font-size: 1.5em;
    margin: 0;
}