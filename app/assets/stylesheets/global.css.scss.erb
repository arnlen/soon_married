// Full screen options
html, body {
    height: 100%;
    width: 100%;
    margin: 0;
    padding: 0;
}

body {
    font-family: 'Walker on the Moon', 'Parisienne', 'sans-serif';
    font-size: 30px;
    color: $red;
    background: url(<%= asset_path('map_background.jpg') %>);
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-size: cover;
    height: 100%;
}

h1, h2, h3 {
    font-weight: normal;
    margin-top: 0;
}

p {
    font-size: 1.5em;
    margin: 0;
}