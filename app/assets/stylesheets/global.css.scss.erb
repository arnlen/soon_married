body {
    font-family: 'Walker on the Moon', 'Parisienne', 'sans-serif';
    font-size: 30px;
    color: $red;
    background-image: url(<%= asset_path('map_background.jpg') %>);
    background-repeat: no-repeat;
    background-position: center 0%;
    background-size: cover;
    height: 750px;
}

h1, h2, h3 {
    font-weight: normal;
}

form {

    input {
        width: 30%;
        padding: 1.5em;
        max-width: 300px;
        border-radius: 5px;
        border: 1px solid $gold;

        &:hover, &:active, &:focus {
            box-shadow: 0 0 20px -5px $gold;
            outline: none;
        }
    }
}

button {
    font-family: 'Walker on the Moon', 'Parisienne', 'sans-serif';
    border: solid 1px;
    height: 100px;
    width: 100px;
    border-radius: 60px;
    cursor: pointer;
    color: white;
    margin: 10px 25px;

    &.beating {
        animation-duration: 1s;
        animation-name: heart_beats;
        animation-iteration-count: infinite;
    }
    
    &.yes {
        background-color: $red;
    }

    &.no {
        background-color: $red-dark;
    }

    &:hover, &:active, &:focus {
        box-shadow: 0 0 20px -5px $gold;
        outline: none;
    }
}